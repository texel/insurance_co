<h1>Envelopes</h1>

<table>
  <thead>
    <tr>
      <th>Envelope ID</th>
      <th>Subject</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @statuses.each do |s| %>
      <tr>
        <td><%= s.envelope_id %></td>
        <td><%= link_to s.subject, envelope_path(s.envelope_id) %></td>
        <td><%= s.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>
<p><%= link_to "Back To Account", account_path %>